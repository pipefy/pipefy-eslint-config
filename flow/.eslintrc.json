{
  "parser": "babel-eslint",
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:testing-library/react"
  ],
  "plugins": ["flowtype", "jest", "react", "import", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true,
    "jest/globals": true
  },
  "rules": {
    "flowtype/no-types-missing-file-annotation": "off",
    "flowtype/generic-spacing": "off",
    "react/no-unsafe": [2, { "checkAliases": true }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
